{
  "name": "Twitter Blocker",
  "description": "ポップアップで指定した時間だけ Twitter のブロックを解除できる拡張機能",
  "version": "1.3.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://x.com/*",
        "*://twitter.com/*"
      ],
      "js": [
        "dist/storageManager.js",
        "dist/contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/constants.js", "dist/styleInjector.js", "dist/popup.css", "dist/storageManager.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "icon/16.png",
      "24": "icon/24.png",
      "32": "icon/32.png",
      "48": "icon/48.png"
    }
  },
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  }
} 
