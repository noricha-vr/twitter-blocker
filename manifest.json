{
  "name": "Twitter Blocker",
  "description": "ポップアップで指定した時間だけ Twitter のブロックを解除できる拡張機能",
  "version": "1.3.1",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://x.com/*",
        "*://twitter.com/*"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/128.png",
      "24": "icon/128.png",
      "32": "icon/128.png",
      "48": "icon/128.png",
      "128": "icon/128.png"
    }
  },
  "icons": {
    "16": "icon/128.png",
    "32": "icon/128.png",
    "48": "icon/128.png",
    "128": "icon/128.png"
  }
} 
